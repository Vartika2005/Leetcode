//T.C O(n) & S.C O(K) k=no. of distinct characters
class Solution {
public:
    int firstUniqChar(string s) {
        unordered_map<char ,int> freq;

        for(int i=0;i<s.size();i++){
            freq[s[i]]++;
        }

        for(int i=0;i<s.size();i++){
            if(freq[s[i]] == 1) {
                return i;
            }
        }
        return -1;
    }
};

//T.C O(n^2) & S.C O(1)
class Solution {
public:
    int firstUniqChar(string s) {
        int n = s.size();
        
        for(int i=0;i<n;i++){
            bool unique = true;
            for(int j=0;j<n;j++){
                if(i!=j && s[i]==s[j]) {
                    unique = false;
                    break;
                }
            }
            if(unique) return i;
        }
        return -1;
    }
};
