//using extra vector
class Solution {
public:
    void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
        vector<int> nums3;
        for(int i=0;i<m;i++){
            nums3.push_back(nums1[i]);
        }
        for(int j=0;j<n;j++){
            nums3.push_back(nums2[j]);
        }

        sort(nums3.begin(),nums3.end());

        for(int i=0;i<nums3.size();i++){
            nums1[i] = nums3[i];
        }

    }
};

//optimal approach
class Solution {
public:
    void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
        int i = m-1, j = n-1, k = m+n-1;
        while(j>=0){ //nums2 is exhausted, remaining nums1 is already in correct place
            if(i>=0 && nums1[i] > nums2[j]){
                nums1[k--] = nums1[i--];
            }
            else{
                nums1[k--] = nums2[j--];
            }
        }
    }
};
