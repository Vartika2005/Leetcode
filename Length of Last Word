class Solution {
public:
    int lengthOfLastWord(string s) {
        int n = s.size();
        int len = 0;
        int i = n-1;

        while(s[i] == ' ' && i>=0){
            i--;
        }

        for( ;i>=0; i--){
            if(s[i] != ' '){
                len++;
            }
            else
            break;
        }
        return len;
        
    }
};
